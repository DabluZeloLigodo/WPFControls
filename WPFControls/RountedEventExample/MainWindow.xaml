<Window x:Class="RountedEventExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RountedEventExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border  Width="210" BorderBrush="Gray" BorderThickness="1" Height="60">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel x:Name="stkButtonGroup" Background="LightBlue" Orientation="Horizontal" Button.Click="YesNoCancelButton_Click">
                    <Button Name="YesButton" Width="60" Margin="5,0,5,0">Yes</Button>
                    <Button Name="NoButton" Width="60" Margin="5,0,5,0">No</Button>
                    <Button Name="CancelButton" Width="60" Margin="5,0,5,0">Cancel</Button>
                </StackPanel>
                <TextBlock Text="{Binding }"></TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
