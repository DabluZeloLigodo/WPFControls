<Window x:Class="FloatWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloatWindow"
        mc:Ignorable="d"
        Title="MainWindow"  Height="65" Width="65"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="NoResize"
        BorderBrush="Transparent"
        BorderThickness="1"
        ShowInTaskbar="False">
    <Grid>
        <Border x:Name="Main" CornerRadius="500" BorderThickness="5" BorderBrush="White"
            Height="60" Width="60" Background="Orange" MouseLeftButtonDown="Main_MouseLeftButtonDown" MouseRightButtonDown="Main_MouseRightButtonDown">
        </Border>
    </Grid>
</Window>
