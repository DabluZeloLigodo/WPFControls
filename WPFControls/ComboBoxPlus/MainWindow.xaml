<Window x:Class="ComboBoxPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBoxPlus"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="ComboboxStyle.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ComboBox Style="{StaticResource CommonComboBoxStyle}" Width="180" Height="32">
            <ComboBoxItem Content="item1"></ComboBoxItem>
            <ComboBoxItem Content="选项2"></ComboBoxItem>
            <ComboBoxItem Content="item3"></ComboBoxItem>
            <ComboBoxItem Content="123456"></ComboBoxItem>
            <ComboBoxItem Content="hello world"></ComboBoxItem>
        </ComboBox>
    </Grid>
</Window>
