<Window x:Class="Shortcut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shortcut"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel></local:MainWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <RoutedUICommand x:Key="Command1" Text="Command1"/>
            <RoutedUICommand x:Key="Command2" Text="Command2"/>
            <RoutedUICommand x:Key="Command3" Text="Command3"/>
            <RoutedUICommand x:Key="Command4" Text="Command4"/>
            <RoutedUICommand x:Key="Command5" Text="Command5"/>
            <RoutedUICommand x:Key="Command6" Text="Command6"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ButtonPlus;component/ButtonStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Grid.ColumnSpan="2" Height="50" Width="200">
            <Border BorderBrush="Black" BorderThickness="1">
                <Grid Background="{Binding BackgroundColor}"></Grid>
            </Border>
        </Grid>
        <Button Style="{StaticResource RC.SuccessButtonStyle}" Margin="20"  Grid.Row="1" Grid.Column="0" Content="Ctrl+C" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Success"></Button>
        <Button Style="{StaticResource RC.PassButtonStyle}" Margin="20"  Grid.Row="1" Grid.Column="1" Content="Ctrl+V" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Pass"></Button>
        <Button Style="{StaticResource RC.JoyButtonStyle}" Margin="20"  Grid.Row="1" Grid.Column="2" Content="F4"  Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Joy"></Button>
        <Button Style="{StaticResource RC.WarningButtonStyle}" Margin="20"  Grid.Row="1" Grid.Column="3" Content="Ctrl+Shift+F4" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Warning"></Button>
        <Button Style="{StaticResource RC.UnknowButtonStyle}" Margin="20"  Grid.Row="2" Grid.Column="0" Content="Ctrl+K Ctrl+V" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Unknow"></Button>
        <Button Style="{StaticResource RC.DefaultButtonStyle}" Margin="20"  Grid.Row="2" Grid.Column="1"  Content="Ctrl+K 1" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Default"></Button>
        <Button Style="{StaticResource RC.CommonButtonStyle}" Margin="20"  Grid.Row="2" Grid.Column="2" Content="Ctrl+K 2" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Common"></Button>
        <Button Style="{StaticResource RC.DangerButtonStyle}" Margin="20"  Grid.Row="2" Grid.Column="3" Content="Ctrl+K 3" Command="{Binding SetColorCommand}" CommandParameter="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" Tag="Danger"></Button>
    </Grid>
</Window>
